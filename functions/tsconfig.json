{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@config": ["config.ts"],
      "@context": ["context"],
      "@lib": ["lib"],
      "@services": ["services"],
      "@types": ["types.ts"],
      "@utils": ["utils"]
    },
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["src"]
}
